@model Entities.Personel

@{
    ViewData["Title"] = "PersonelGuncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>PersonelGuncelle</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="PersonelGuncelle">
           
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="id" value="@Model.id" />

            <div class="form-group">
                <label asp-for="ad" class="control-label"></label>
                <input asp-for="ad" class="form-control" />
                <span asp-validation-for="ad" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="soyad" class="control-label"></label>
                <input asp-for="soyad" class="form-control" />
                <span asp-validation-for="soyad" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DepartmanID" class="control-label"></label>
                <select asp-for="DepartmanID" class="form-control" asp-items="@ViewBag.Departmanlar"></select>
                <span asp-validation-for="DepartmanID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Personeller">Listeye geri dön</a>
</div>

