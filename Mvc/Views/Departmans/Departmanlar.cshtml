@model IEnumerable<Entities.Departman>

@{
    ViewData["Title"] = "Departmanlar";
}

<h1>Departmanlar</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ad)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ad)
            </td>
            <td>
                @Html.ActionLink("Guncelle", "DepartmanGuncelle", new { id=item.id }) |
                @Html.ActionLink("Sil", "DepartmanSil", new { id=item.id })
            </td>
        </tr>
}
    </tbody>
</table>
